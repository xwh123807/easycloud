{
    "kind": "List",
    "apiVersion": "v1",
    "params": [
        {
            "name": "user",
            "description": "用户",
            "value": "gxff"
        }
    ],
    "items": [
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "wordpress-{user}",
                "labels": {
                    "component": "wordpress",
                    "user":"{user}"
                }
            },
            "spec": {
                "type":"NodePort",
                "ports": [
                    {
                        "port": 80,
                        "targetPort": 80
                    }
                ],
                "selector": {
                    "component": "wordpress",
                    "user":"{user}"
                }
            }
        },
        {
            "apiVersion": "extensions/v1beta1",
            "kind": "Deployment",
            "metadata": {
                "name": "wordpress-{user}",
                "labels": {
                    "component": "wordpress",
                    "user":"{user}"
                }
            },
            "spec": {
                "replicas": 1,
                "template": {
                    "metadata": {
                        "labels": {
                            "component": "wordpress",
                            "user":"{user}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "wordpress",
                                "image": "wordpress:4.7.0-apache",
                                "ports": [
                                    {
                                        "containerPort": "80"
                                    }
                                ],
                                "resources": {
                                    "requests": {
                                        "memory": "512Mi"
                                    },
                                    "limits": {
                                        "memory": "1Gi"
                                    }
                                },
                                "env": [
                                    {
                                        "name": "WORDPRESS_DB_HOST",
                                        "value": "mysql:3306"
                                    },
                                    {
                                        "name": "WORDPRESS_DB_PASSWORD",
                                        "value": "password"
                                    }
                                ],
                                "securityContext": {
                                    "privileged": true
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}
