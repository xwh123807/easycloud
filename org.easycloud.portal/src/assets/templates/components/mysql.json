{
    "kind": "List",
    "apiVersion": "v1",
    "params": [
        {
            "name": "user",
            "description": "用户",
            "value": "gxff"
        }
    ],
    "items": [
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "mysql-{user}",
                "labels": {
                    "component": "mysql",
                    "user": "{user}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "port": 3306,
                        "targetPort": 3306
                    }
                ],
                "selector": {
                    "component": "mysql",
                    "user": "{user}"
                }
            }
        },
        {
            "apiVersion": "extensions/v1beta1",
            "kind": "Deployment",
            "metadata": {
                "name": "mysql-{user}",
                "namespace": "default",
                "labels": {
                    "component": "mysql",
                    "user": "{user}"
                }
            },
            "spec": {
                "replicas": 1,
                "template": {
                    "metadata": {
                        "labels": {
                            "component": "mysql",
                            "user": "{user}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "mysql",
                                "image": "mysql:5.7.17",
                                "args": [
                                    "--user=mysql"
                                ],
                                "resources": {
                                    "requests": {
                                        "memory": "512Mi"
                                    },
                                    "limits": {
                                        "memory": "1Gi"
                                    }
                                },
                                "ports": [
                                    {
                                        "containerPort": 3306
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "MYSQL_ROOT_PASSWORD",
                                        "value": "password"
                                    }
                                ],
                                "securityContext": {
                                    "privileged": true
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}
